                    # æ˜¾ç¤ºè°ƒè¯•ä¿¡æ¯
                    if hasattr(st.session_state, 'last_prompt') and hasattr(st.session_state, 'last_response'):
                        analysis_component.render_debug_info(
                            st.session_state.last_prompt,
